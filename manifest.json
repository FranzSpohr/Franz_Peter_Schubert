{
  "manifest_version": 2,

  "name": "Schubert",
  "version": "0.1",
  "author": "Theodore H. Ma",

  "description": "It does stuff on Slate.",

  "icons": {
    "16": "src/img/schubert_16.png",
    "32": "src/img/schubert_32.png",
    "48": "src/img/schubert_48.png",
    "128": "src/img/schubert_128.png"
  },

  "page_action": {
    "default_icon": {
      "16": "src/img/schubert_16.png",
      "32": "src/img/schubert_32.png",
      "48": "src/img/schubert_48.png",
      "128": "src/img/schubert_128.png"
    },
    "default_title": "Slate n Things",
    "default_popup": "popup.html"
  },

  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["https://*/manage/database/acquire", "https://*/manage/lookup/*", "https://*/manage/inbox/*"],
      "exclude_matches": ["*://*/*business*"],
      "js": ["batch_zoom.js"]
    },
    {
      "matches": ["https://*/manage/reader/*"],
      "exclude_matches": ["*://*/*business*"],
      "js": ["reader_zoom.js"]
    }
]
}
